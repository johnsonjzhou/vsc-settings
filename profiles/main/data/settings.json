{
    // UI Preferences
    "chat.commandCenter.enabled": false,
    "editor.fontFamily": "'Liga SFMono Nerd Font', 'JetBrains Mono', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontWeight": 500,
    "editor.fontSize": 12,
    "editor.lineHeight": 1.6,
    "editor.renderWhitespace": "all",
    "editor.rulers": [80],
    "editor.colorDecorators": false,
    "editor.tabSize": 2,
    "editor.renderLineHighlight": "all",
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairsHorizontal": false,
    "editor.minimap.autohide": false,
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.scale": 1,
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 80,
    "diffEditor.ignoreTrimWhitespace": true,
    "files.autoSave": "afterDelay",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "jupyter.askForKernelRestart": false,
    "jupyter.notebookFileRoot": "${workspaceFolder}",
    "jupyter.widgetScriptSources": [
        "jsdelivr.com",
        "unpkg.com"
    ],
    "markdown.preview.fontSize": 18,
    "notebook.cellFocusIndicator": "border",
    "notebook.cellToolbarLocation": {
        "default": "left"
    },
    "notebook.insertFinalNewline": true,
    "notebook.lineNumbers": "on",
    "notebook.output.scrolling": true,
    "scm.defaultViewMode": "tree",
    "scm.diffDecorationsGutterPattern": {
        "modified": false
    },
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.lineHeight": 1.1,
    "terminal.integrated.letterSpacing": 1.05,
    "window.autoDetectColorScheme": true,
    "workbench.activityBar.location": "top",
    "workbench.editor.centeredLayoutFixedWidth": true,
    "workbench.editor.tabActionLocation": "left",
    "workbench.colorTheme": "Flow MacOS Github Dark",
    "workbench.preferredDarkColorTheme": "Flow MacOS Github Dark",
    "workbench.preferredLightColorTheme": "Flow MacOS Light Mono Calm",
    "workbench.iconTheme": null,
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",

    // Extension settings
    "color-highlight.markerType": "dot-before",
    "color-highlight.markRuler": false,
    "syncSettings.additionalFiles": [],
    "better-comments.tags": [
        {
            "tag": "fixme",
            "color": "#ff0000",
            "strikethrough": false,
            "backgroundColor": "#ff000020"
        },
        {
            "tag": "mark: fixme",
            "color": "#ff0000",
            "strikethrough": false,
            "backgroundColor": "#ff000020"
        },
        {
            "tag": "todo",
            "color": "#ffa500",
            "strikethrough": false,
            "backgroundColor": "#ffa50020"
        },
        {
            "tag": "mark: todo",
            "color": "#ffa500",
            "strikethrough": false,
            "backgroundColor": "#ffa50020"
        },
        {
            "tag": "mark:",
            "color": "#2dd26f",
            "strikethrough": false,
            "backgroundColor": "#2dd26f20"
        },
        {
            "tag": "note:",
            "color": "#2dd26f",
            "strikethrough": false,
            "backgroundColor": "#2dd26f20"
        },
    ],

    // Language specific settings
    "python.languageServer": "Pylance",
    "terminal.integrated.env.osx": {
        "PYTHONPATH": "${workspaceFolder}"
    },
    "[python]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.formatOnType": true,
    },
    "[json]": {
        "editor.tabSize": 4
    },
    "[markdown]": {
        "editor.autoClosingBrackets": "never",
        "files.trimTrailingWhitespace": false
    },
    "[latex]": {
        "files.trimTrailingWhitespace": false
    },
    "[restructuredtext]": {
        "files.trimTrailingWhitespace": false
    },

    // Launch settings
    "launch": {
        "version": "0.2.0",
        "configurations": [
            {
                "name": "Python: Current File (Workspace path)",
                "type": "debugpy",
                "request": "launch",
                "program": "${file}",
                "console": "integratedTerminal",
                "justMyCode": true,
                "env": {
                    "PYTHONPATH": "${workspaceFolder}",
                }
            },
            {
                "name": "Python: Current File (File path)",
                "type": "debugpy",
                "request": "launch",
                "program": "${file}",
                "console": "integratedTerminal",
                "justMyCode": true,
                "env": {
                    "PYTHONPATH": "${fileDirname}"
                }
            },
            {
                "name": "Node.js (brew): Current File",
                "type": "node",
                "request": "launch",
                "skipFiles": [
                    "<node_internals>/**"
                ],
                "program": "${file}",
                "console": "integratedTerminal",
                "runtimeExecutable": "/opt/homebrew/bin/node",
            },
        ]
    },
    "cmake.showOptionsMovedNotification": false,
    "notebook.editorOptionsCustomizations": {
        "editor.tabSize": 4,
        "editor.indentSize": 4,
        "editor.insertSpaces": true
    },

    // Spartan HPC
    // https://dashboard.hpc.unimelb.edu.au/software/vscode/
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "/apps/**": true,
        "/data/gpfs/**": true,
        "/data/projects/**": true,
        "/data/cephfs/**": true,
        "/data/scratch/**": true,
        "/scratch/**": true
    },
    "search.followSymlinks": false,
    "search.exclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "/apps/**": true,
        "/data/gpfs/**": true,
        "/data/projects/**": true,
        "/data/cephfs/**": true,
        "/data/scratch/**": true,
        "/scratch/**": true
    },
    "git.replaceTagsWhenPull": true,

    // LaTex
    "latex-workshop.latex.tools": [
        {
          "name": "latexmk",
          "command": "latexmk",
          "args": [
            "-synctex=1",
            "-interaction=nonstopmode",
            "-file-line-error",
            "-pdf",
            "-outdir=%OUTDIR%",
            "%DOC%"
          ],
          "env": {
            "PATH": "/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/Library/TeX/texbin:/Library/Apple/usr/bin"
          }
        },
      ],
      "latex-workshop.latex.recipes": [
        {
          "name": "latexmk ðŸ”ƒ",
          "tools": [
            "latexmk"
          ],
        },
      ],
      "latex-workshop.latex.clean.fileTypes": [
          "*.aux",
          "*.bbl",
          "*.blg",
          "*.idx",
          "*.ind",
          "*.lof",
          "*.lot",
          "*.out",
          "*.toc",
          "*.acn",
          "*.acr",
          "*.alg",
          "*.glg",
          "*.glo",
          "*.gls",
          "*.ist",
          "*.fls",
          "*.log",
          "*.fdb_latexmk",
          "*.snm",
          "*.nav",
      ],
      "latex-workshop.message.badbox.show": "none",
}