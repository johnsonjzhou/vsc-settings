{
    // UI Preferences
    "editor.fontFamily": "'Liga SFMono Nerd Font', 'JetBrains Mono', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontWeight": 500,
    "editor.fontSize": 12,
    "editor.lineHeight": 1.6,
    "editor.renderWhitespace": "all",
    "editor.rulers": [80],
    "editor.colorDecorators": false,
    "editor.tabSize": 2,
    "editor.renderLineHighlight": "all",
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairsHorizontal": false,
    "editor.minimap.autohide": false,
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "always",
    "editor.minimap.scale": 1,
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "diffEditor.ignoreTrimWhitespace": true,
    "files.autoSave": "afterDelay",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "notebook.cellToolbarLocation": {
        "default": "left"
    },
    "notebook.insertFinalNewline": true,
    "notebook.lineNumbers": "on",
    "scm.defaultViewMode": "tree",
    "scm.diffDecorationsGutterPattern": {
        "modified": false
    },
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.lineHeight": 1.1,
    "terminal.integrated.letterSpacing": 1.05,
    "window.autoDetectColorScheme": true,
    "workbench.activityBar.location": "top",
    "workbench.fontAliasing": "antialiased",
    "workbench.sideBar.location": "right",
    "workbench.colorTheme": "Flow MacOS Light Mono Calm",
    "workbench.preferredDarkColorTheme": "Flow MacOS Dark Mono Calm",
    "workbench.preferredLightColorTheme": "Flow MacOS Light Mono Calm",
    "workbench.iconTheme": null,
    "workbench.startupEditor": "none",
    "workbench.editor.tabActionLocation": "left",


    // Extension settings
    "color-highlight.markerType": "dot-before",
    "color-highlight.markRuler": false,
    "indenticator.width": 1,
    "indenticator.style": "solid",
    "indenticator.color.light": "#fcb828",
    "indenticator.color.dark": "#b99a01",
    "syncSettings.additionalFiles": [],

    // Language specific settings
    "python.languageServer": "Jedi",
    "[python]": {
        "editor.tabSize": 4,
        "editor.formatOnType": true
    },
    "[json]": {
        "editor.tabSize": 4
    },
    "[markdown]": {
        "editor.autoClosingBrackets": "never",
        "files.trimTrailingWhitespace": false
    },
    "[restructuredtext]": {
        "files.trimTrailingWhitespace": false
    },

    // Launch settings
    "launch": {
        "version": "0.2.0",
        "configurations": [
            {
                "name": "Python: Current File (Workspace path)",
                "type": "python",
                "request": "launch",
                "program": "${file}",
                "console": "integratedTerminal",
                "justMyCode": true,
                "env": {
                    "PYTHONPATH": "${workspaceFolder}"
                }
            },
            {
                "name": "Python: Current File (File path)",
                "type": "python",
                "request": "launch",
                "program": "${file}",
                "console": "integratedTerminal",
                "justMyCode": true,
                "env": {
                    "PYTHONPATH": "${fileDirname}"
                }
            },
            {
                "name": "Node.js (brew): Current File",
                "type": "node",
                "request": "launch",
                "skipFiles": [
                    "<node_internals>/**"
                ],
                "program": "${file}",
                "console": "integratedTerminal",
                "runtimeExecutable": "/opt/homebrew/bin/node",
            },
        ]
    },

}